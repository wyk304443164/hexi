<style lang="less">

  Page, .body {
    font-family: '\5FAE\8F6F\96C5\9ED1', arial;
    background: #f4f4f4;
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    position: relative;
  }

  swiper {
    width: 100%;
    /*6%*/
    height: 180px;
    /*margin: 3% 3% 0;*/
  }

  .slide-image {
    height: 100%;
    /*border-radius: 10px;*/
    width: 100%;
  }

  .home-list-container {
    position: relative;
    padding: 1.5% 1.5% 0;

    .item {
      display: block;
      text-decoration: none;
      position: relative;
      width: 47%;
      float: left;
      margin: 1.5% 1.5%;
      height: 170px;

      background: white;
      border-radius: 10px;

      box-shadow: 2px 2px 2px #ddd;

      .item-img {
        width: 100%;
        height: 120px;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        float: left;
      }

      .item-text {
        height: 36px;
        font-size: 14px;
        color: #212121;
        float: left;

        padding: 5px;

        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 2;
        overflow: hidden;
      }
    }
  }

  .clear {
    clear: both;
  }

  .home-toTop {
    position: fixed;
    z-index: 3;
    bottom: 20px;
    right: 20px;
    width: 40px;
    height: 40px;
    display: block;

    image {
      display: block;
      width: 100%;
      height: 100%;
    }
  }

  /*  加载更多   */
  .weui-loading {
    margin: 0 5px;
    width: 20px;
    height: 20px;
    display: inline-block;
    vertical-align: middle;
    -webkit-animation: weuiLoading 1s steps(12, end) infinite;
    animation: weuiLoading 1s steps(12, end) infinite;
    background: transparent url(data:image/svg+xml;base64,) no-repeat;
    background-size: 100%;
  }

  .weui-loadmore {
    line-height: 60px;
    font-size: 14px;
    text-align: center;
  }

  .weui-loadmore__tips {
    display: inline-block;
    vertical-align: middle;
  }

  .input-container {
    background: -webkit-gradient(linear, 0 0, 0 100%, from(#6f6f6f), to(rgba(0, 0, 0, 0)));
    padding: 6px 0 6px;
    position: fixed;
    z-index: 99;
    top: 0;
    width: 100%;
    display: flex;

    align-items: center;
  }

  .input-search {
    width: 25px;
    height: 25px;
    float: left;
    margin: 2.5px 0 0 7px;
  }

  .img-flex {
    width: 25px;
    height: 25px;
  }

  .image-location {
    margin-left: 15px;
  }

  .image-kf {
    margin-right: 15px;
    position: relative;

    image {
      width: 100%;
      height: 100%;
    }

    button {
      width: 100%;
      height: 100%;
      opacity: 0;
      position: absolute;
      top: 0;
    }

  }

  .inputView {
    /*border: 1px solid #c1c1c1;*/
    background: rgba(255, 255, 255, .9);
    border-radius: 15px;
    margin: 0 15px;
    float: left;
    /*width: calc(~"100% - 120px");*/
    flex-grow: 1;
  }

  .input {
    padding-left: 7.5px;
    height: 30px;
    color: #888;
    font-size: 13px;
  }

</style>
<template>
  <view class="input-container">
    <image
      src="../images/home/location.png"
      class="img-flex image-location"
      @tap="toLocation">
    </image>
    <view class="inputView">
      <image src="../images/home/search.png" class="input-search"></image>
      <input
        class="input"
        placeholder="搜索"
        confirm-type="search"
        placeholder-style="color:#888"
        bindconfirm="inputConfirm"
        bindinput="bindInput"
      />
    </view>

    <view class="img-flex image-kf">
      <image
        src="../images/home/kf.png">
      </image>
      <button open-type="contact"></button>
    </view>

  </view>
  <swiper
    wx:if="{{false}}"
    indicator-dots="{{true}}"
    autoplay="{{true}}"
    interval="{{3000}}"
    duration="{{300}}"
    circular="{{true}}">
    <block wx:for="{{imgUrls}}" wx:key="{{item.img}}">
      <swiper-item>
        <image src="{{item}}" class="slide-image"/>
      </swiper-item>
    </block>
  </swiper>

  <!--分类-->

  <home_class></home_class>

  <home_recommend></home_recommend>

  <view class="home-list-container">

    <repeat for="{{listData}}">
      <view class="item" @tap="toPhotoDetail({{index}})">
        <image src="{{item.picurl}}" class="item-img" lazy-load="{{true}}" mode="aspectFill"/>
        <text class="item-text">{{item.title}}</text>
      </view>
    </repeat>

    <view class="clear"></view>

  </view>

  <view class="weui-loadmore" wx:if="{{isShowLoadMore}}">
    <view class="weui-loading"></view>
    <view class="weui-loadmore__tips">正在加载...</view>
  </view>

  <view @tap="toTop" class="home-toTop">
    <image src="https://s1.hdslb.com/bfs/static/mult/images/toTop1.png" alt="顶部"/>
  </view>
</template>

<script>
  import wepy from 'wepy'
  import { API_URL, common } from '../config'
  import home_class from '../components/home/home_class'
  import home_recommend from '../components/home/home_recommend'

  export default class home extends wepy.page {

    config = {
      'navigationBarTitleText': '河西 · 印象',
      'navigationBarTextStyle': 'white',
      'navigationBarBackgroundColor': '#323d4a',
      'disableScroll': false,
      'enablePullDownRefresh': true,
      'backgroundTextStyle': 'dark'
    }

    components = {
      home_class: home_class,
      home_recommend: home_recommend,
    }

    mixins = []

    data = {
      imgUrls: [
        'http://img02.tooopen.com/images/20150928/tooopen_sy_143912755726.jpg',
        'http://img06.tooopen.com/images/20160818/tooopen_sy_175866434296.jpg',
        'http://img06.tooopen.com/images/20160818/tooopen_sy_175833047715.jpg'
      ],

      listData: [],// 总列表
      current_page: 1, // 当前页
      last_page: 0,// 总共有多少页

      isShowLoadMore: false,//是不是显示加载更多
      isLoadFinished: true,//是不是加载结束了

      key: '',//搜索框的内容
    }

    computed = {}

    methods = {
      toTop () {
        if (wx.pageScrollTo) {
          wx.pageScrollTo({
            scrollTop: 0
          })
        } else {
          wx.showModal({
            title: '提示',
            content: '当前微信版本过低，无法使用该功能，请升级到最新微信版本后重试。'
          })
        }
      },

      toPhotoDetail (index) {
        wx.navigateTo({
          url: `/pages/photodetail?id=${this.listData[index].id}`
        })
      },

      toLocation () {
        wx.openLocation({
          latitude: 31.5720800000,
          longitude: 120.3298700000,
          scale: 18,
          name: '河西印象',
          address: '崇安区长江北路金海里675号河西印象'
        })
      },

      inputConfirm () {
        //监听回车键
        wx.startPullDownRefresh && wx.startPullDownRefresh()
        this.onPullDownRefresh()
      },

      bindInput (e) {
        this.key = e.detail.value
        this.$apply()
      }
    }

    events = {
      'index-emit': (...args) => {
        let $event = args[args.length - 1]
        console.log(`${this.$name} receive ${$event.name} from ${$event.source.$name}`)
      }
    }

    onLoad () {
      this.getList()
    }

    onShow () {
      this.$parent.getUserInfo(function (u) {
      })
    }

    //转发
    onShareAppMessage () {
      return {
        title: '河西印象',
        path: '/pages/home'
      }
    }

    onPullDownRefresh () {
      this.getList()
    }

    //加载更多
    onReachBottom () {
      if (!this.isLoadFinished) {
        return
      }
      if (this.last_page && this.current_page >= this.last_page) {
        this.isLoadFinished = true
        this.isShowLoadMore = false
        this.$apply()
      } else {
        this.isShowLoadMore = true
        this.$apply()
        this.getList(this.current_page + 1)
      }
    }

    getList (index = 1) {
      let that = this
      that.current_page = index
      if (index === 1) that.listData = []
      that.$apply()
      wx.request({
        url: API_URL.list,
        data: {
          showNum: 10,
          page: that.current_page,
          key: that.key
        },
        method: 'GET',
        success: function (response) {
          response = response.data.data
          console.log(response)
          that.listData = that.listData.concat(response.data)
          that.last_page = response.last_page
          //是不是有更多
          that.isShowLoadMore = that.current_page < response.last_page
          that.$apply()
        },
        fail: function () {

        },
        complete: function () {
          wx.stopPullDownRefresh()
          that.isShowLoadMore = false
          that.$apply()
        }
      })

    }

  }
</script>
